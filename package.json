{
  "name": "payload-basic-template",
  "version": "1.0.0",
  "description": "Template to get started with Next.js, Payload 3.0, MongoDb and Tailwind CSS",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "^3.56.0",
    "@payloadcms/next": "^3.56.0",
    "@payloadcms/payload-cloud": "^3.56.0",
    "@payloadcms/richtext-lexical": "^3.56.0",
    "@payloadcms/ui": "^3.56.0",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "graphql": "^16.11.0",
    "next": "^15.5.4",
    "payload": "^3.56.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
		"@tailwindcss/typography": "^0.5.18",    
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",    
    "eslint": "^9.36.0",
		"eslint-config-next": "^15.5.4",
		"eslint-config-prettier": "^10.1.8",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.2"    
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
